<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="text_window">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_check_window" parent="text_window">
        <item name="android:textSize">14sp</item>
        <item name="android:button">@drawable/window_check_selector</item>
        <!--<item name="android:button">@null</item>-->
    </style>

    <style name="text_arrow_check_window" parent="text_window">
        <item name="android:textSize">14sp</item>
        <item name="android:button">@drawable/window_check_arrow_selector</item>
    </style>


</resources>
