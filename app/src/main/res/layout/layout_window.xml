<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_window"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="4dp">


    <TextView
        android:id="@+id/txt_window_main"
        style="@style/text_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_action_cut"
        android:text="点击开始" />

    <CheckBox
        android:id="@+id/check_window_menu"
        style="@style/text_arrow_check_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="打开更多" />

    <LinearLayout
        android:id="@+id/layout_window_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <CheckBox
            android:id="@+id/check_window_release_copy"
            style="@style/text_check_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速发布" />

        <CheckBox
            android:id="@+id/check_window_release_back"
            style="@style/text_check_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快速返回" />

        <CheckBox
            android:id="@+id/check_window_comment_copy"
            style="@style/text_check_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快捷评论" />

    </LinearLayout>


</LinearLayout>